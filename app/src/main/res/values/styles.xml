<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>

    <!-- Day -->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorCardBackground">@color/colorCardBackground</item>
        <item name="colorDivider">@color/colorDivider</item>
        <item name="colorStroke">@color/colorStroke</item>
        <item name="colorBottomAppBarBackground">@color/colorBottomAppBarBackground</item>
        //
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        //
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="colorTextPrimary">@color/colorTextPrimary</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
    </style>

    <!-- Night-->
    <style name="AppTheme.Dark" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/colorBackgroundNight</item>
        <item name="colorBackground">@color/colorBackgroundNight</item>
        <item name="colorCardBackground">@color/colorCardBackgroundNight</item>
        <item name="colorDivider">@color/colorDividerNight</item>
        <item name="colorStroke">@color/colorStrokeNight</item>
        <item name="colorBottomAppBarBackground">@color/colorBottomAppBarBackgroundNight</item>
        //
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        //
        <item name="android:textColor">@color/colorTextDefaultNight</item>
        <item name="colorTextPrimary">@color/colorTextPrimaryNight</item>
        <item name="colorTextSecondary">@color/colorTextSecondaryNight</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <style name="AppTheme.Dashboard" parent="AppTheme">
        <item name="android:windowBackground">@drawable/dashboard_screen</item>
    </style>

    <style name="ChooserTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="listPreferredItemHeightSmall">52dp</item>
        <item name="listPreferredItemHeight">52dp</item>
    </style>
</resources>

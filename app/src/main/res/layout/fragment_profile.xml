<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawablePadding="@dimen/padding_double"
        android:drawableStart="@drawable/ic_person_gray"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextPrimary"
        android:textSize="18sp"
        tools:text="Name" />

    <TextView
        android:id="@+id/text_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawablePadding="@dimen/padding_double"
        android:drawableStart="@drawable/ic_department_gray"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextPrimary"
        android:textSize="18sp"
        tools:text="Department" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawablePadding="@dimen/padding_double"
        android:drawableStart="@drawable/ic_email_gray"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextPrimary"
        android:textSize="18sp"
        tools:text="Email" />

    <TextView
        android:id="@+id/text_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawablePadding="@dimen/padding_double"
        android:drawableStart="@drawable/ic_business_gray"
        android:hint="@string/hint_first_working_day"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextPrimary"
        android:textSize="18sp"
        tools:text="First Working Date" />

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawablePadding="@dimen/padding_double"
        android:drawableStart="@drawable/ic_phone_gray"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextPrimary"
        android:textSize="18sp"
        tools:text="Phone" />

    <TextView
        android:id="@+id/text_skype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawablePadding="@dimen/padding_double"
        android:drawableStart="@drawable/ic_skype"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextPrimary"
        android:textSize="18sp"
        tools:text="Skype" />

    <TextView
        android:id="@+id/text_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:drawablePadding="@dimen/padding_double"
        android:drawableStart="@drawable/ic_cake_gray"
        android:hint="@string/hint_birthday"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextPrimary"
        android:textSize="18sp"
        tools:text="birth" />

</LinearLayout>
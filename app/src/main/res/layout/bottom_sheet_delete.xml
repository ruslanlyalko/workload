<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_delete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_chooser_dialog"
    android:elevation="12dp"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="@string/text_are_you_sure_you_want_to_delete_this_workload"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextSecondary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_delete"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_delete_g"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/menu_delete"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextPrimary"
        android:textSize="16sp" />

</LinearLayout>

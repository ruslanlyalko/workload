<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="44dp">

    <TextView
        android:id="@+id/text_add_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="6dp"
        android:paddingEnd="0dp"
        android:paddingStart="64dp"
        android:paddingTop="6dp"
        android:text="@string/text_add_note"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextSecondary"
        android:textSize="15sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/check_box"
        android:backgroundTint="@android:color/transparent"
        android:inputType="textCapSentences|textMultiLine"
        android:paddingEnd="52dp"
        android:paddingStart="12dp"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/colorTextDefault"
        android:textSize="16sp"
        tools:ignore="Autofill,LabelFor"
        tools:text="List Item Title " />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_remove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="2dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/action_delete"
        android:padding="3dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_delete_x_gray"
        tools:visibility="visible"
        />

</RelativeLayout>